{% extends "layouts/layout.njk" %}

{% block pageTitle %}
  Apply for Attendance Allowance
{% endblock %}

{% block content %}
<div class="govuk-grid-row">
  <div class="govuk-grid-column-two-thirds">
    
			{% if data['referrer'] === 'check-your-answers'  %}
				<form action="check-your-answers" method="post" class="form">
			{% else %}
				<form action="full-name" method="post" class="form">
			{% endif %}

      {% from "govuk/components/input/macro.njk" import govukInput %}
      
      {{ govukInput({
        label: {
          text: "What is your National Insurance number?",
          classes: "govuk-label--l",
          isPageHeading: true
        },
         hint: {
          text: "It’s on your National Insurance card, pension statement, benefit letter, payslip or P60. This is an example NI number, ‘QQ 12 34 56 C’."
        },
        id: "national-insurance-number",
        name: "national-insurance-number",
        classes: "govuk-input--width-10",
        spellcheck: false,
        value: data["national-insurance-number"]
      }) }}

      <button class="govuk-button" data-module="govuk-button">Continue</button>

    </form>

  </div>
</div>


{% endblock %}
