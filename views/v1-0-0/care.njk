{% from "govuk/components/radios/macro.njk" import govukRadios %}
{% extends "layouts/layout.njk" %}
{% block content %}
<div class="govuk-width-container">
  <a href="#" class="govuk-back-link">Back</a>
  <main class="govuk-main-wrapper " id="main-content" role="main">
    <div class="govuk-grid-row">
      <div class="govuk-grid-column-two-thirds">
        {% if data['referrer'] === 'check-your-answers'  %}
			    <form action="check-your-answers" method="post" class="form">
		    {% else %}
			    <form action="care-history" method="post" novalidate>
		    {% endif %}
        {{ govukRadios({
          classes: "govuk-radios--inline",
          idPrefix: "currently-in-a-care-home-or-hospital",
          name: "currently-in-a-care-home-or-hospital",
          fieldset: {
            legend: {
              text: "Are you currently in a care home or hospital?",
              isPageHeading: true,
              classes: "govuk-fieldset__legend--l"
            }
          },
          items: [
            {
              value: "yes",
              text: "Yes",
              checked: true if data["currently-in-a-care-home-or-hospital"] === "yes"
            },
            {
              value: "no",
              text: "No",
              checked: true if data["currently-in-a-care-home-or-hospital"] === "no"
            }
          ]
        }) }}

        <button class="govuk-button" data-module="govuk-button">
          Continue
        </button>
        </form>
      </div>
    </div>
  </main>
</div>


{% endblock %}
