{% extends "layouts/layout.njk" %}

{% block pageTitle %}
	Apply for Attendance Allowance
{% endblock %}

{% block content %}
	<div class="govuk-width-container">
		<a href="#" class="govuk-back-link">Back</a>
		<main class="govuk-main-wrapper " id="main-content" role="main">
			<div class="govuk-grid-row">
				<div class="govuk-grid-column-two-thirds">
					<form action="home-address-pick" method="post" novalidate>
						<div class="govuk-form-group">
							<fieldset class="govuk-fieldset">
								<legend class="govuk-fieldset__legend govuk-fieldset__legend--l">
									<h1 class="govuk-fieldset__heading">
										What is your home address?
									</h1>
								</legend>
								<p class="govuk-body">We will only use this to send you letters about your Attendance Allowance claim.</p>
								<div class="govuk-form-group">
								</div>
								<div class="govuk-form-group">
									<label class="govuk-label" for="postcode">
										Postcode
									</label>
								<input class="govuk-input govuk-input--width-5" id="postcode" name="postcode" type="text" value="{{data['postcode']}}"></div>
							</fieldset>
						</div>
						<button class="govuk-button" data-module="govuk-button">
							Find address
						</button>
						<p class="govuk-body">
							<a href="#">
								Enter your address manually
							</a>
						</p>
					</form>
				</div>
			</div>
		</main>
	</div>
{% endblock %}
