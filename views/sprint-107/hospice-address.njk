{% from "govuk/components/input/macro.njk" import govukInput %}
{% from "govuk/components/fieldset/macro.njk" import govukFieldset %}

{% extends "v5-layouts/prototypeLayout.njk" %}


{% block form %}

  {% call govukFieldset({
    legend: {
      text: "What is the name of the hospice?",
      classes: "govuk-fieldset__legend--l",
      isPageHeading: true
    }
  }) %}

  {{ govukInput({
    label: {
      text: 'Name of hospice', 
      isPageHeading: true
    },
    errorMessage: data.validation['hospice-name'].error,
    id: "hospice-name",
    name: "hospice-name",
    value: data["hospice-name"],
    autocomplete: "hospice-name"
  }) }}

  {{ govukInput({
    label: {
      text: 'Town or city', 
      isPageHeading: true
    },
    classes: "govuk-!-width-two-thirds",
    errorMessage: data.validation['hospice-town'].error,
    id: "hospice-town",
    name: "hospice-town",
    value: data["hospice-town"]
  }) }}

  {#
  {{ govukInput({
    label: {
      text: "Postcode", 
      isPageHeading: true
    },
    classes: "govuk-input--width-10",
    errorMessage: data.validation['hospice-postcode'].error,
    id: "hospice-postcode",
    name: "hospice-postcode",
    value: data["hospice-postcode"],
    autocomplete: "hospice-postcode"
  }) }}
  #}

{% endcall %}

