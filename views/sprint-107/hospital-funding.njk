{% from "govuk/components/radios/macro.njk" import govukRadios %}

{% extends "v5-layouts/prototypeLayout.njk" %}


{% block form %}
  {{ govukRadios({
    idPrefix: "hospital-funding",
    name: "hospital-funding",
    fieldset: {
      legend: {
        text: "Is your treatment being provided by the NHS?",
        isPageHeading: true,
        classes: "govuk-fieldset__legend--l"
      }
    },
    errorMessage: data.validation['hospital-funding'].error,
    items: [
      {
        value: "yes",
        text: "Yes",
        checked: true if data["hospital-funding"] === "yes"
      },
      {
        value: "no",
        text: "No",
        checked: true if data["hospital-funding"] === "no"
      },
      {
        divider: "or"
      },
      {
        value: "i-do-not-know",
        text: "I do not know",
        checked: true if data["hospital-funding"] === "i-do-not-know"
      }
    ]
  }) }}
{% endblock %}

{% block postForm %}
    {% include './macros/assisted-digital-details.njk' %}
{% endblock %}