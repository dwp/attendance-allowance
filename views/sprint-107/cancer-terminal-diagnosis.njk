{% from "govuk/components/radios/macro.njk" import govukRadios %}

{% extends "v5-layouts/prototypeLayout.njk" %}

{% block form %}

  {{ govukRadios({
    idPrefix: "cancer-terminal-diagnosis",
    name: "cancer-terminal-diagnosis",
    fieldset: {
      legend: {
        text: "Have you been diagnosed with terminal cancer?",
        isPageHeading: true,
        classes: "govuk-fieldset__legend--l"
      }
    },
    errorMessage: data.validation['cancer-terminal-diagnosis'].error,
    items: [
      {
        value: "yes",
        text: "Yes",
        checked: true if data["cancer-terminal-diagnosis"] === "yes"
      },
      {
        value: "no",
        text: "No",
        checked: true if data["cancer-terminal-diagnosis"] === "no"
      }
    ]
  }) }}
{% endblock %}

{% block postForm %}
    {% include './macros/assisted-digital-details.njk' %}
{% endblock %}