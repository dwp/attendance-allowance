    {{ govukFooter({
      rebrand: true,
      meta: {
        items: [
          {
            href: "/survey",
            text: "Survey"
          }
        ]
      }
    }) }}
  {% endblock %}
{% endif %}

{% block bodyEnd %}
  {% block scripts %}
     <script type='module'>
      import { initAll } from '/govuk-frontend-5.11.0.min.js'

