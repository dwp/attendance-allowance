{% from "govuk/components/textarea/macro.njk" import govukTextarea %}
{% from "govuk/components/character-count/macro.njk" import govukCharacterCount %}


{% extends "v5.9.0-layouts/prototypeLayout.njk" %}


{% block form %}

<legend class="govuk-fieldset__legend govuk-fieldset__legend--l">
    {% if data['who-is-applying'] == 'myself' %}
      <h1 class="govuk-fieldset__heading">Tell us what treatment or surgery you are having and any dates</h1>
    {% else %}
      <h1 class="govuk-fieldset__heading">Tell us what treatment or surgery they are having and any dates</h1>
    {% endif %}
</legend>

<p class="govuk-hint">
  For example, operation to replace my hip on 17 December 2022.
</p>

{{ govukCharacterCount({
  name: "withHint",
  id: "with-hint",
  maxlength: 200,
  errorMessage: data.validation['treatment-surgery-information'].error,
    id: "treatment-surgery-information",
    name: "treatment-surgery-information",
    value: data["treatment-surgery-information"]
}) }}
    
{% endblock %}

{% block postForm %}
    {% include './macros/assisted-digital-details.njk' %}
{% endblock %}