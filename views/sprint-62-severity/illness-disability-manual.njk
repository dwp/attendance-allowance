{% from "govuk/components/input/macro.njk" import govukInput %}
{% from "../macros/phase-button.njk" import phaseButton %}

{% extends "layouts/prototypeLayout.njk" %}

{% block form %}

  <legend class="govuk-fieldset__legend govuk-fieldset__legend--l">
    <h1 class="govuk-fieldset__heading govuk-body govuk-!-margin-bottom-4">
      Your illnesses, physical and mental disabilities
    </h1>
  </legend>

  <p class="govuk-body">
    Tell us about the illness, physical and mental disability you have.
  </p>

  <p class="govuk-body">
    Can you tell us:
  </p>

  <ul class="govuk-list govuk-list--bullet">
    <li>
      the name of your illness or disability
    </li>
  </ul>

  <div class="govuk-inset-text">
    <span class="govuk-body govuk-!-font-weight-bold">
      Example
    </span>
    <br/>
    Alzheimerâ€™s disease.
  </div>

  <div class="govuk-!-margin-bottom-8">
    {{ govukInput({
      errorMessage: data.validation['illness-disability-manual'].error,
      id: "illness-disability-manual",
      name:  "illness-disability-manual"
    }) }}
  </div>

  {% block formButton %} 
  {% endblock %}

  <div class="govuk-button-group">
    {{ phaseButton(data, "Add condition") }}
  </div>

{% endblock %}

