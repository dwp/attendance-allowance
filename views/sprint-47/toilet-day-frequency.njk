{% from "govuk/components/radios/macro.njk" import govukRadios %}
{% from "govuk/components/details/macro.njk" import govukDetails %}

{% extends "layouts/prototypeLayout.njk" %}

{% block form %}
 <span class="govuk-caption-l">Using the toilet or managing incontinence during the day</span>

  {{ govukRadios({
    idPrefix: "toilet-day-frequency",
    name: "toilet-day-frequency",
    fieldset: {
      legend: {
        text: "On a typical day how many times do you have difficulty using the toilet, or managing incontinence?",
        isPageHeading: true,
        classes: "govuk-fieldset__legend--l govuk-!-margin-bottom-6"
      }
    },
    errorMessage: data.validation['toilet-day-frequency'].error,
    items: [
      {
        value: "1",
        text: "1",
        checked: true if data["toilet-day-frequency"] === "1h"
      },
      {
        value: "2",
        text: "2",
        checked: true if data["toilet-day-frequency"] === "2"
      },
      {
        value: "3 or more",
        text: "3 or more",
        checked: true if data["toilet-day-frequency"] === "3 or more"
      }
    ]
  }) }}

{% endblock %}