{% from "govuk/components/radios/macro.njk" import govukRadios %}

{% extends "v5.11.0-layouts/prototypeLayout.njk" %}

{% block form %}

  {{ govukRadios({
    idPrefix: "healthcare-professional-cancer",
    name: "healthcare-professional-cancer",
    fieldset: {
      legend: {
        text: "Do you want to add contact details for any healthcare professionals involved in your cancer care?",
        isPageHeading: true,
        classes: "govuk-fieldset__legend--l"
      }
    },
    errorMessage: data.validation['healthcare-professional-cancer'].error,
    items: [
      {
        value: "yes",
        text: "Yes",
        checked: true if data["healthcare-professional-cancer"] === "yes"
      },
      {
        value: "no",
        text: "No",
        checked: true if data["healthcare-professional-cancer"] === "no"
      }
    ]
  }) }}
{% endblock %}

{% block postForm %}
    {% include './macros/assisted-digital-details.njk' %}
{% endblock %}