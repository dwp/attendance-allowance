{% from "govuk/components/radios/macro.njk" import govukRadios %}
{% from "govuk/components/details/macro.njk" import govukDetails %}

{% extends "layouts/prototypeLayout.njk" %}

{% block form %}
 <span class="govuk-caption-l">Communication</span>

  {{ govukRadios({
    idPrefix: "communication-day-frequency",
    name: "communication-day-frequency",
    fieldset: {
      legend: {
        text: "On a typical day how many times do you need to communicate with other people?",
        isPageHeading: true,
        classes: "govuk-fieldset__legend--l govuk-!-margin-bottom-6"
      }
    },
    errorMessage: data.validation['communication-day-frequency'].error,
    items: [
      {
        value: "1",
        text: "1",
        checked: true if data["communication-day-frequency"] === "1"
      },
      {
        value: "2",
        text: "2",
        checked: true if data["communication-day-frequency"] === "2"
      },
     {
        value: "3 or more",
        text: "3 or more",
        checked: true if data["communication-day-frequency"] === "3 or more"
      }
    ]
  }) }}

{% endblock %}