{% from "./change-link.njk" import changeLink %}
{% from "./reword-date.njk" import rewordDate %}

{% macro checkAnswersDaySection(data) %}
	<section class="Your care needs during the day">
		<h2 class="govuk-heading-l">
		Your care needs during the day
		</h2>
		<dl class="govuk-summary-list govuk-!-margin-bottom-9">
			<div class="govuk-summary-list__row difficulties-day">
				<dt class="govuk-summary-list__key">
					Activities you need help with
				</dt>
				<dd class="govuk-summary-list__value">
					<ul class="govuk-list">
						{% for item in data['day-difficulties'] %}
							<li>
								{{ item 
								| replace("daytime-bed", "Getting in and out of bed")
								| replace("daytime-washing", "Washing yourself") 
								| replace("daytime-dressing", "Dressing and undressing yourself")
								| replace("daytime-moving", "Moving around indoors during the daytime") 
								| replace("daytime-toilet", "Getting to and using the toilet")
								| replace("daytime-eating", "Eating and drinking") 
								| replace("daytime-medication", "Taking medication or receiving treatment")
								| replace("daytime-hobbies", "Social hobbies and interests") 
								| replace("daytime-medication", "Taking medication or receiving treatment")
								| replace("daytime-communication", "Communication") 
								| replace("daytime-none", "None of these apply to me") }}
							</li>
						{% endfor %}
					</ul>
				</dd>
				<dd class="govuk-summary-list__actions">
					{{ changeLink('day-difficulties') }}
				</dd>
			</div>
			{% if data['day-difficulties'] != "daytime-none" %}
				<div class="govuk-summary-list__row difficulties-start-date-day">
					<dt class="govuk-summary-list__key">
						When you started to experience difficulties
					</dt>
					<dd class="govuk-summary-list__value">
						{% if data['difficulties-start-date-day-day'] %}
							{{ rewordDate(data['difficulties-start-date-day-day'], data['difficulties-start-date-day-month'], data['difficulties-start-date-day-year']) }}
						{% endif %}
					</dd>
					<dd class="govuk-summary-list__actions">
						{{ changeLink('difficulties-start-date-day') }}
					</dd>
				</div>
			{% endif %}  
		</dl>
	</section>
	{% if data["day-difficulties"] and data["day-difficulties"].includes("daytime-bed") %}
		<section class="Getting in and out of bed">
			<h2 class="govuk-heading-m">
				Getting in and out of bed
			</h2>
			<dl class="govuk-summary-list govuk-!-margin-bottom-9">
				<div class="govuk-summary-list__row bed-day">
					<dt class="govuk-summary-list__key">
						The difficulty you experience
					</dt>
					<dd class="govuk-summary-list__value">
						<ul class="govuk-list">
							{% for item in data['bed-day'] %}
								<li>
									{{ item 
									| replace("physical", "I have physical difficulty when I get in and out of bed")
									| replace("motivation", "I need encouragement or prompting to get in and out of bed") 
									| replace("none", "None of these apply to me") }}
								</li>
							{% endfor %}
						</ul>
					</dd>
					<dd class="govuk-summary-list__actions">
						{{ changeLink('bed-day') }}
					</dd>
				</div>
				{% if data['bed-day'] != "none" %}
					<div class="govuk-summary-list__row ">
						<dt class="govuk-summary-list__key">
							Do you usually need to go back to bed during the day?
						</dt>
						<dd class="govuk-summary-list__value">
							{{ data['return-bed-day'] | capitalize }}
						</dd>
						<dd class="govuk-summary-list__actions">
							{{ changeLink('return-bed-day') }}
						</dd>
					</div>
					{% if data['return-bed-day'] == "yes" %}
            <div class="govuk-summary-list__row day-frequency">
              <dt class="govuk-summary-list__key">
                How many times do you do this activity again during the day?
              </dt>
              <dd class="govuk-summary-list__value">
                {{ data['return-bed-day-times'] }}
              </dd>
              <dd class="govuk-summary-list__actions">
                {{ changeLink('return-bed-day') }}
              </dd>
            </div>
					{% endif %}
				{% endif %}  
			</dl>
		</section>
	{% endif %}
	{% if data["day-difficulties"] and data["day-difficulties"].includes("daytime-washing") %}
		<section class="Washing">
			<h2 class="govuk-heading-m">
				Washing
			</h2>
			<dl class="govuk-summary-list govuk-!-margin-bottom-9">
				<div class="govuk-summary-list__row wash-day">
					<dt class="govuk-summary-list__key">
						The difficulty you experience
					</dt>
					<dd class="govuk-summary-list__value">
						<ul class="govuk-list">
							{% for item in data['wash-day'] %}
								<li>
									{{ item 
									| replace("wash-physical", "I have physical difficulty when I wash myself")
									| replace("wash-motivation", "I need encouragement or prompting to wash myself") 
									| replace("no-other-apply", "None of these apply to me") }}
								</li>
							{% endfor %}
						</ul>
					</dd>
					<dd class="govuk-summary-list__actions">
						{{ changeLink('wash-day') }}
					</dd>
				</div>
				{% if data['wash-day'] != "no-other-apply" %}
					<div class="govuk-summary-list__row ">
						<dt class="govuk-summary-list__key">
							Do you need to wash yourself again during the day?
						</dt>
						<dd class="govuk-summary-list__value">
							{{ data['additional-wash-day'] | capitalize }}
						</dd>
						<dd class="govuk-summary-list__actions">
							{{ changeLink('additional-wash-day') }}
						</dd>
					</div>
					{% if data['additional-wash-day'] == "yes" %}
            <div class="govuk-summary-list__row day-frequency">
              <dt class="govuk-summary-list__key">
                How many times do you do this activity again during the day?
              </dt>
              <dd class="govuk-summary-list__value">
                {{ data['wash-frequency'] }}
              </dd>
              <dd class="govuk-summary-list__actions">
                {{ changeLink('additional-wash-day') }}
              </dd>
            </div>
					{% endif %}
				{% endif %}  
			</dl>
		</section>
	{% endif %}
	{% if data["day-difficulties"] and data["day-difficulties"].includes("daytime-dressing") %}
		<section class="Dressing">
			<h2 class="govuk-heading-m">
				Dressing and undressing
			</h2>
			<dl class="govuk-summary-list govuk-!-margin-bottom-9">
				<div class="govuk-summary-list__row dress-day">
