{% from "govuk/components/radios/macro.njk" import govukRadios %}

{% extends "layouts/prototypeLayout.njk" %}

{% block form %}

  <span class="govuk-caption-l">Someone to watch over you during the night</span>

  {{ govukRadios({
    idPrefix: "watch-over-night",
    name: "watch-over-night",
    fieldset: {
      legend: {
        text: "Do you need someone to watch over you during the night?",
        isPageHeading: true,
        classes: "govuk-fieldset__legend--l"
      }
    },
    hint: {
      text: "Watching over you means that someone needs to be present in the house during the night because you canâ€™t manage on your own."
    },
    errorMessage: data.validation['watch-over-night'].error,
    items: [
      {
        value: "yes",
        text: "Yes",
        checked: true if data["watch-over-night"] === "yes"
      },
      {
        value: "no",
        text: "No",
        checked: true if data["watch-over-night"] === "no"
      }
    ]
  }) }}
{% endblock %}