{% from "govuk/components/radios/macro.njk" import govukRadios %}

{% extends "v5-layouts/prototypeLayout.njk" %}


{% block form %}
  {{ govukRadios({
    idPrefix: "care-home-hospital",
    name: "care-home-hospital",
    fieldset: {
      legend: {
        text: "Are you currently staying in any of these places?",
        isPageHeading: true,
        classes: "govuk-fieldset__legend--l"
      }
    },
    errorMessage: data.validation['care-home-hospital'].error,
    items: [
      {
        value: "hospital",
        text: "Hospital",
        checked: true if data["care-home-hospital"] === "hospital"
      },
      {
        value: "care-nursing-home",
        text: "Care or nursing home",
        checked: true if data["care-home-hospital"] === "care-nursing-home"
      },
      {
        value: "hospice",
        text: "Hospice",
        checked: true if data["care-home-hospital"] === "hospice"
      },
      {
        value: "other-accommodation",
        text: "Other",
        hint: {
          text: "This could include sheltered housing, respite care or other accommodation."
        },
        checked: true if data["care-home-hospital"] === "other-accommodation"
      },
      {
        divider: "or"
      },
      {
        value: "none",
        text: "No, none of these",
        checked: true if data["care-home-hospital"] === "none"
      }
    ]
  }) }}
{% endblock %}

{% block postForm %}
    {% include './macros/assisted-digital-details.njk' %}
{% endblock %}