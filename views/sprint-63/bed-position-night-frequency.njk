{% from "govuk/components/radios/macro.njk" import govukRadios %}
{% from "govuk/components/input/macro.njk" import govukInput %}


{% extends "layouts/prototypeLayout.njk" %}

{% block form %}
  <span class="govuk-caption-l">Getting into the right position in bed during the night</span>
  <h1 class="govuk-heading-l">How often and for how long</h1>

  {{ govukRadios({
    id: "night-frequency-1-bed",
    name: "night-frequency-1-bed",
    fieldset: {
      legend: {
        text: "How many times a night do you have difficulties getting into a comfortable  position in bed?",
        isPageHeading: false,
        classes: "govuk-fieldset__legend--m"
      }
    },
    errorMessage: data.validation['night-frequency-1-bed'].error,
    items: [
      {
        value: "1",
        text: "1",
        checked: true if data["night-frequency-1-bed"] === "1"
      },
      {
        value: "2",
        text: "2",
        checked: true if data["night-frequency-1-bed"] === "2"
      },
      {
        value: "3+",
        text: "3 or more",
        checked: true if data["night-frequency-1-bed"] === "3+"
      }
    ]
  }) }}

  {{ govukInput({
    id: "night-length-1-bed",
    name: "night-length-1-bed",
    errorMessage: data.validation['night-length-1-bed'].error,
    label: {
      text: "Typically, how long do the occasions take when you need to move to get into a  comfortable position in bed?",
      classes: "govuk-label--m",
      isPageHeading: true
    },
    hint: {
      text: "For example,  approximately 20 minutes or 1 hour"
    }
  }) }}

{% endblock %}