{% from "govuk/components/input/macro.njk" import govukInput %}
{% from "govuk/components/radios/macro.njk" import govukRadios %}

{% extends "layouts/prototypeLayout.njk" %}

{% block form %}
  <span class="govuk-caption-l">Falling during the day</span>
  <h1 class="govuk-heading-l">
    In the last year, how many times did you fall? 
  </h1>
  
  {{ govukInput({
    name: "frequency-falling",
    type: "falling",
    autocomplete: "falling",
    classes: "govuk-input--width-4",
    value: data['frequency-falling'],
    errorMessage: data.validation['frequency-falling'].error,
    hint: {
      text: "Please enter a number (it can be approximate)"
    }
  }) }}

  {{ govukRadios({
    idPrefix: "help-falling",
    name: "help-falling",
    fieldset: {
      legend: {
        text: "Do you need help to get up after a fall?",
        isPageHeading: true,
        classes: "govuk-fieldset__legend--m"
      }
    },
    errorMessage: data.validation['help-falling'].error,
    items: [
      {
        value: "yes",
        text: "Yes",
        checked: true if data["help-falling"] === "yes"
      },
      {
        value: "no",
        text: "No",
        checked: true if data["help-falling"] === "no"
      }
    ]
  }) }}

  {{ govukRadios({
    idPrefix: "falls-clinic",
    name: "falls-clinic",
    fieldset: {
      legend: {
        text: "Have you been referred to a Falls Clinic?",
        isPageHeading: true,
        classes: "govuk-fieldset__legend--m"
      }
    },
    errorMessage: data.validation['falls-clinic'].error,
    items: [
      {
        value: "yes",
        text: "Yes",
        checked: true if data["falls-clinic"] === "yes"
      },
      {
        value: "no",
        text: "No",
        checked: true if data["falls-clinic"] === "no"
      }
    ]
  }) }}
 
{% endblock %}