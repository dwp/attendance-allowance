{% from "govuk/components/input/macro.njk" import govukInput %}

{% extends "layouts/prototypeLayout.njk" %}

{% block form %}
  {{ govukInput({
    label: {
      text: "What is your full name?",
      classes: "govuk-label--l",
      isPageHeading: true
    },
    errorMessage: data.validation['full-name'].error,
    hint: {
      text: "Include any middle names."
    },
    id: "full-name",
    name: "full-name",
    value: data["full-name"]
  }) }}
{% endblock %}
