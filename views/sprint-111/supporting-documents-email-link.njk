{% from "govuk/components/radios/macro.njk" import govukRadios %}

{% extends "v5-layouts/prototypeLayout.njk" %}


{% block form %}
  {{ govukRadios({
    idPrefix: "supporting-documents-email-link",
    name: "supporting-documents-email-link",
    fieldset: {
      legend: {
        text: "Can we email you a link to upload your supporting documents?",
        isPageHeading: true,
        classes: "govuk-fieldset__legend--l"
      }
    },
    errorMessage: data.validation['supporting-documents-email-link'].error,
    items: [
      {
        value: "yes",
        text: "Yes",
        checked: true if data["supporting-documents-email-link"] === "yes"
      },
      {
        value: "no",
        text: "No",
        checked: true if data["supporting-documents-email-link"] === "no"
      }
    ]
  }) }}
{% endblock %}

{% block postForm %}
    {% include './macros/assisted-digital-details.njk' %}
{% endblock %}