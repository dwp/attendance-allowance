{% from "govuk/components/back-link/macro.njk" import govukBackLink %}

{% extends "layouts/layout.njk" %}

{% block content %}
    <div class="govuk-grid-row">
        <div class="govuk-grid-column-two-thirds">
            {% block backLink %}
                {{ govukBackLink({
                text: "Back",
                href: "person-claiming"
                }) }}
            {% endblock %}
            <div class="govuk-form-group">
                <h1 class="govuk-heading-l">Based on your answers, you need to apply using the paper form</h1>
                <p class="govuk-body">You will need to use the <a class="govuk-link govuk-link--no-underline" href="https://www.gov.uk/government/publications/attendance-allowance-claim-form">paper claim form</a> if you're applying for Attendance Allowance:
                </p>
                <ul class="govuk-list govuk-list--bullet">
                    <li>on behalf of someone else for example, you have lasting power of attorney in place for property and finance</li>
                    <li>on behalf of someone else who meets the 'special rules'</li>
                    <li>for yourself and the 'special rules' apply to your condition</li>
                </ul>
            </div>
        </div>
    </div>
  </div>
{% endblock %}     

{% block postForm %}
    {% include './macros/assisted-digital-details.njk' %}
{% endblock %}