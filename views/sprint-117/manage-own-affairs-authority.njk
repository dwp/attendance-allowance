{% from "govuk/components/radios/macro.njk" import govukRadios %}

{% extends "v5.11.0-layouts/prototypeLayout.njk" %}

{% block form %}

  {{ govukRadios({
    idPrefix: "manage-own-affairs-authority",
    name: "manage-own-affairs-authority",
    fieldset: {
      legend: {
        text: "Does someone have authority over the benefits or financial affairs of the person you are helping to apply?",
        isPageHeading: true,
        classes: "govuk-fieldset__legend--l"
      }
    },
    errorMessage: data.validation['manage-own-affairs-authority'].error,
    items: [
      {
        value: "authority",
        text: "Yes, I have authority",
        checked: true if data["manage-own-affairs-authority"] === "authority"
      },
      {
        value: "someone-else",
        text: "Yes, someone else has authority",
        checked: true if data["manage-own-affairs-authority"] === "someone-else"
      },
      {
        divider: "or"
      },
      {
        value: "no-one",
        text: "No one has authority",
        checked: true if data["manage-own-affairs-authority"] === "no-one"
      }
    ]
  }) }}

{% endblock %}

{% block postForm %}
    {% include './macros/assisted-digital-details.njk' %}
{% endblock %}