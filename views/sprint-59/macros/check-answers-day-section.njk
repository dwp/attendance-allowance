                        <div class="govuk-summary-list__row someone-to-keep-an-eye">
                            <dt class="govuk-summary-list__key">
                                Do you need someone to keep an eye on you during the day?
                            </dt>
                            <dd class="govuk-summary-list__value">
                                {{ data['keep-eye-choice'] | capitalize }}
                            </dd>
                            <dd class="govuk-summary-list__actions">
                                {{ changeLink('keep-eye-choice') }}
                            </dd>
                        </div>
                        {% if data['keep-eye-choice'] != "no" %}
                            <div class="govuk-summary-list__row keep-eye-why">
                                <dt class="govuk-summary-list__key">
                                    Can you tell us why you need someone to keep an eye on you during the day?
                                </dt>
                                <dd class="govuk-summary-list__value">
                                    <ul class="govuk-list">
                                        {% for item in data['keep-eye-why'] %}
                                            <li>
                                                {{ item
