{% from "govuk/components/radios/macro.njk" import govukRadios %}

{% extends "v5-layouts/prototypeLayout.njk" %}


{% block form %}

  {% set welshLanguageSpeakBody %}
    <p class="govuk-body"> 
      If you live in Wales you can choose to communicate with us in Welsh.
    </p>
    <p class="govuk-body govuk-hint"> 
      This includes phone calls and face-to-face meetings.
    </p>
  {% endset %}

  {{ govukRadios({
    idPrefix: "welsh-language-speak",
    name: "welsh-language-speak",
    classes: "govuk-!-margin-bottom-4",
    fieldset: {
      legend: {
        text: "What language do you want us to speak to you in?",
        isPageHeading: true,
        classes: "govuk-fieldset__legend--l"
      }
    },
    errorMessage: data.validation['welsh-language-speak'].error,
    hint: {
      html: welshLanguageSpeakBody
    },
    items: [
      {
        value: "english",
        text: "English",
        checked: true if data["welsh-language-speak"] === "english"
      },
      {
        value: "welsh",
        text: "Welsh",
        checked: true if data["welsh-language-speak"] === "welsh"
      }
    ]
  }) }}
{% endblock %}

{% block postForm %}
    {% include './macros/assisted-digital-details.njk' %}
{% endblock %}