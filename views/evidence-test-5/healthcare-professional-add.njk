{% from "govuk/components/radios/macro.njk" import govukRadios %}

{% extends "v5-layouts/prototypeLayout.njk" %}


{% block form %}

 {{ govukRadios({
  idPrefix: "healthcare-professional-add",
  name: "healthcare-professional-add",
  fieldset: {
    legend: {
      text: "Do you want to add contact details for another healthcare professional?",
      isPageHeading: true,
      classes: "govuk-fieldset__legend--l"
    }
  },
  errorMessage: data.validation['healthcare-professional-add'].error,
  items: [
    {
      value: "yes",
      text: "Yes",
      checked: true if data["healthcare-professional-add"] === "yes"
    },
    {
      value: "no",
      text: "No",
      checked: true if data["healthcare-professional-add"] === "no"
    }
  ]
 }) }}
{% endblock %}

{% block postForm %}
    {% include './macros/assisted-digital-details.njk' %}
{% endblock %}