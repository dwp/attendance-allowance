{% from "govuk/components/input/macro.njk" import govukInput %}

{% extends "v5.11.0-layouts/prototypeLayout.njk" %}

{% block form %}


    {% if data['who-is-applying'] == 'myself' %}

      <legend class="govuk-fieldset__legend govuk-fieldset__legend--l">
        <h1 class="govuk-fieldset__heading">What is your National Insurance number?</h1>
      </legend>

      <p class="govuk-hint">
        It is on your National Insurance card, pension statement, benefit letter, payslip or P60. For example, ‘QQ 12 34 56 C'.
      </p>

    {% else %}

      <legend class="govuk-fieldset__legend govuk-fieldset__legend--l">
        <h1 class="govuk-fieldset__heading">What is their National Insurance number?</h1>
      </legend>

      <p class="govuk-hint">
        It is on their National Insurance card, pension statement, benefit letter, payslip or P60. For example, ‘QQ 12 34 56 C'.
      </p>

    {% endif %}


  {{ govukInput({
    errorMessage: data.validation['national-insurance'].error,
    id: "national-insurance",
    name: "national-insurance",
    classes: "govuk-input--width-10",
    spellcheck: false,
    value: data["national-insurance"]
  }) }}
{% endblock %}

{% block postForm %}
    {% include './macros/assisted-digital-details.njk' %}
{% endblock %}