{% from "govuk/components/radios/macro.njk" import govukRadios %}

{% extends "v5.11.0-layouts/prototypeLayout.njk" %}


{% block form %}

  <legend class="govuk-fieldset__legend govuk-fieldset__legend--l">
    {% if data['who-is-applying'] == 'myself' %}
      <h1 class="govuk-fieldset__heading">Do you have any home adaptations, specialist equipment or aids?</h1>
    {% else %}
      <h1 class="govuk-fieldset__heading">Do they have any home adaptations, specialist equipment or aids?</h1>
    {% endif %}
  </legend>

  <p class="govuk-hint">This means things like a raised toilet seat, walking stick, handrails, shoe horn, hearing aid or special cutlery.</p>

  {{ govukRadios({
    idPrefix: "aids-adaptations-question",
    name: "aids-adaptations-question",
    fieldset: {
      legend: {
        isPageHeading: true,
        classes: "govuk-fieldset__legend--l"
      }
    },
    errorMessage: data.validation['aids-adaptations-question'].error,
    items: [
      {
        value: "yes",
        text: "Yes",
        checked: true if data["aids-adaptations-question"] === "yes"
      },
      {
        value: "no",
        text: "No",
        checked: true if data["aids-adaptations-question"] === "no"
      }
    ]
  }) }}
{% endblock %}

{% block postForm %}
    {% include './macros/assisted-digital-details.njk' %}
{% endblock %}
