{% from "govuk/components/checkboxes/macro.njk" import govukCheckboxes %}
{% from "govuk/components/input/macro.njk" import govukInput %}

{% extends "v5.11.0-layouts/prototypeLayout.njk" %}

{% block form %}

   <legend class="govuk-fieldset__legend govuk-fieldset__legend--l">
    {% if data['who-is-applying'] == 'myself' %}
      <h1 class="govuk-fieldset__heading">Approximately, how long is someone awake in the night to keep you safe?</h1>
    {% else %}
      <h1 class="govuk-fieldset__heading">Approximately, how long is someone awake in the night to keep them safe?</h1>
    {% endif %}
  </legend>

  {{
    govukInput({
      id: "safe-night-length",
      name: "safe-night-length",
      value: data['safe-night-length'],
      hint: {
        text: "This is the total amount of time that someone is awake. For example, 10 minutes or two hours."
      },
      errorMessage: data.validation['safe-night-length'].error
    })
  }}
{% endblock %}

{% block postForm %}
    {% include './macros/assisted-digital-details.njk' %}
{% endblock %}