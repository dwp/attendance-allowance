{% from "govuk/components/radios/macro.njk" import govukRadios %}

{% extends "v5.11.0-layouts/prototypeLayout.njk" %}

{% block form %}

  <legend class="govuk-fieldset__legend govuk-fieldset__legend--l">
    {% if data['who-is-applying'] == 'myself' %}
      <h1 class="govuk-fieldset__heading">Are you having any other treatment or waiting for surgery?</h1>
    {% else %}
      <h1 class="govuk-fieldset__heading">Are they having any other treatment or waiting for surgery?</h1>
    {% endif %}
  </legend>

  {{ govukRadios({
    idPrefix: "treatment-surgery",
    name: "treatment-surgery",
    errorMessage: data.validation['treatment-surgery'].error,
    items: [
      {
        value: "yes",
        text: "Yes",
        checked: true if data["treatment-surgery"] === "yes"
      },
      {
        value: "no",
        text: "No",
        checked: true if data["treatment-surgery"] === "no"
      }
    ]
  }) }}

{% endblock %}

{% block postForm %}
    {% include './macros/assisted-digital-details.njk' %}
{% endblock %}