{% extends "v5.11.0-layouts/prototypeLayout.njk" %}

{% from "govuk/components/notification-banner/macro.njk" import govukNotificationBanner %}
{% from "govuk/components/warning-text/macro.njk" import govukWarningText %}

 {% block form %}

  {% set checkAnswersAgain %}
    <p class="govuk-notification-banner__heading">
      You can
      <a class="govuk-notification-banner__link" href="check-answers-full-list">check all of your answers again</a>.
    </p>
  {% endset %}

  {{ govukNotificationBanner({
    html: checkAnswersAgain
  }) }}

  <h1 class="govuk-heading-m">Declaration</h1>

  {% if data['who-is-applying'] == 'myself' %}

    <p class="govuk-body">
      By sending the application you agree that the information you have given is complete and correct.
      If you deliberately give the wrong or incomplete information, or you do not report any changes, you may:
    </p>

    <ul class="govuk-list govuk-list--bullet">
      <li>be prosecuted</li>
      <li>need to pay a financial penalty</li>
      <li>need to pay back any money you are overpaid if you are asked to</li>
    </ul>

  {% else %}

    <p class="govuk-body">
      By sending the application {{ data['first-name'] | capitalize }} agrees that the information you have given is complete and correct.
      If the wrong or incomplete information is deliberately given, or any changes are not reported, {{ data['first-name'] | capitalize }} may:
    </p>

    <ul class="govuk-list govuk-list--bullet">
      <li>be prosecuted</li>
      <li>need to pay a financial penalty</li>
      <li>need to pay back any money they are overpaid if they are asked to</li>
    </ul>

  {% endif %}

{% endblock %}

{% block formButton %}

  {% if data['who-is-applying'] == 'myself' %}

    <button data-prevent-double-click="true" class="govuk-button" data-module="govuk-button">
      I agree - send my application
    </button>

  {% else %}

    <button data-prevent-double-click="true" class="govuk-button" data-module="govuk-button">
      Accept and send
    </button>

  {% endif %}

{% endblock %}

{% block postForm %}
    {% include './macros/assisted-digital-details.njk' %}
{% endblock %}