{% from "govuk/components/input/macro.njk" import govukInput %}

{% extends "v5.11.0-layouts/prototypeLayout.njk" %}

{% block form %}

  <legend class="govuk-fieldset__legend govuk-fieldset__legend--l">
    <span class="govuk-caption-l">Stumbling or falling during the day</span>
    {% if data['who-is-applying'] == 'myself' %}
      <h1 class="govuk-fieldset__heading">Approximately, how many times did you fall down in the last 12 months?</h1>
    {% else %}
      <h1 class="govuk-fieldset__heading">Approximately, how many times did they fall down in the last 12 months?</h1>
    {% endif %}
  </legend>

  {{ govukInput({
    name: "frequency-falling",
    type: "frequency-falling",
    autocomplete: "frequency-falling",
    classes: "govuk-input--width-4",
    value: data['frequency-falling'],
    errorMessage: data.validation['frequency-falling'].error
  }) }}

{% endblock %}

{% block postForm %}
    {% include './macros/assisted-digital-details.njk' %}
{% endblock %}