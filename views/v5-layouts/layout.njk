{%- set assetPath = '/govuk/assets' -%}

{% extends "./template.njk" %}

{% block head %}
  <link rel="stylesheet" type="text/css" href="/govuk-frontend-5.0.0.min.css" />
  <script type="module" src="/govuk-frontend-5.0.0.min.js"></script>

{% endblock %}

{% block pageTitle %}
  GOV.UK Prototype Kit - Apply for Attendance Allowance
{% endblock %}

{% block header %}
  {{ govukHeader({
    homepageUrl: "/",
    serviceName: "Apply for Attendance Allowance",
    serviceUrl: "/",
    containerClasses: "govuk-width-container"
  }) }}
{% endblock %}

{% block beforeContent %}
  <div class="govuk-phase-banner">
    <p class="govuk-phase-banner__content">
      <strong class="govuk-tag govuk-phase-banner__content__tag">
        Beta
      </strong>
      <span class="govuk-phase-banner__text">
        This is a new service â€“ your <a class="govuk-link" href="#">feedback (opens in a new tab)</a> will help us to improve it.
      </span>
    </p>
  </div>
{% endblock %}

{% set mainClasses = mainClasses | default("govuk-main-wrapper--auto-spacing") %}

{% if useAutoStoreData %}
  {% block footer %}
    {{ govukFooter({
      meta: {
        items: [
          {
            href: "/survey",
            text: "Survey"
          },
          {
            href: "/sprint-80/accessibility-statement",
            text: "Accessibility Statement"
          }
        ]
      }
    }) }}
  {% endblock %}
{% endif %}

{% block bodyEnd %}
  {% block scripts %}
     <script type='module'>
      import { initAll } from '/govuk-frontend-5.0.0.min.js'

      initAll()
    </script>
    {% block pageScripts %}{% endblock %}
  {% endblock %}
{% endblock %}