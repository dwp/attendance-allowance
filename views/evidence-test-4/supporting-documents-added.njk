{% from "govuk/components/summary-list/macro.njk" import govukSummaryList %}
{% from "govuk/components/button/macro.njk" import govukButton %}
{% from "govuk/components/tag/macro.njk" import govukTag %}
{% from "govuk/components/radios/macro.njk" import govukRadios %}
{% from "govuk/components/table/macro.njk" import govukTable %}

{% extends "v5-layouts/prototypeLayout.njk" %}

{% block form %}

 <h1 class="govuk-heading-l">Your uploaded files</h1>
  
    <p class="govuk-body govuk-!-display-none" id="refreshPageProgress"><a href="#" class="govuk-link">Refresh page to update file upload progress</a></p>
    {{ govukSummaryList({
      
      rows: data['supporting-documents-upload-rows']
    }) }}

    {# 
    {% set uploadFilesLimit %}
      <p class="govuk-body"> 
        You can add up to 2.
      </p>
    {% endset %}
    #}

    {{ govukRadios({
      idPrefix: "supporting-documents-added",
      name: "supporting-documents-added",
      fieldset: {
        legend: {
          text: "Do you want to upload another file?",
          isPageHeading: true,
          classes: "govuk-fieldset__legend--m"
        }
      },
      hint: {
      html: uploadFilesLimit
      },
      errorMessage: data.validation['supporting-documents-added'].error,
      items: [
        {
          value: "yes",
          text: "Yes"
        },
        {
          value: "no",
          text: "No"
        }
      ]
    }) }}

{% endblock %}

{% block postForm %}
    {% include './macros/assisted-digital-details.njk' %}
{% endblock %}