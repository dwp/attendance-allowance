{% from "govuk/components/radios/macro.njk" import govukRadios %}

{% extends "v5-layouts/prototypeLayout.njk" %}

{% block form %}

 {{ govukRadios({
  idPrefix: "supporting-documents-options",
  name: "supporting-documents-options",
  fieldset: {
    legend: {
      text: "How do you want to give us your supporting documents?",
      isPageHeading: true,
      classes: "govuk-fieldset__legend--l"
    }
  },
  errorMessage: data.validation['supporting-documents-options'].error,
  items: [
    {
      value: "upload-now",
      text: "I want to upload them now",
      checked: true if data["supporting-documents-options"] === "upload-now"
    },
    {
      value: "upload-later",
      text: "I want to upload them after submitting my application",
      checked: true if data["supporting-documents-options"] === "upload-later"
    },
    {
      value: "post",
      text: "I want to send them in the post",
      checked: true if data["supporting-documents-options"] === "post"
    },
    {
        divider: "or"
      },
      {
        value: "no-documents",
        text: "I do not want to give these to DWP",
        checked: true if data["supporting-documents-options"] === "no-documents"
      }
  ]
 }) }}
{% endblock %}

{% block postForm %}
    {% include './macros/assisted-digital-details.njk' %}
{% endblock %}